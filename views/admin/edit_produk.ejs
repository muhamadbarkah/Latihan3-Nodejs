          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Form Edit Produk</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <%
              if (data.length) {
                for (var i=0; i < data.length; i++) {
            %>
            <form role="form" method="post" action="/express/admin/edit_produk/<%=data[i].id_product%>" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nama Produk</label>
                  <input type="text" class="form-control" name="title" id="exampleInputEmail1" value="<%=data[i].nama_produk%>" required />
                </div>

                <div class="form-group">
                  <label for="exampleInputEmail1">Harga</label>
                  <input type="text" class="form-control" name="harga" id="exampleInputEmail1" value="<%=data[i].harga_product%>" required />
                </div>
                <!-- <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div> -->

                <!-- textarea -->
                <div class="form-group">
                  <label>Deskripsi Produk</label>
                  <textarea class="form-control text-justify" rows="3" name="description" required><%=data[i].des_product%></textarea>
                </div>
                <div class="row">
                  <div class="col-md-3">
                    <p class="text-center">Gambar Produk</p>
                    <img src="/public/news_images/<%=data[i].gambar_produk%>" width="180" height="150" />
                  </div>

                  <div class="col-md-3">
                    <p class="text-center">Tampak Produk Depan</p>
                    <img src="/public/news_images/<%=data[i].gambar_depan%>" width="180" height="150" />
                  </div>

                  <div class="col-md-3">
                    <p class="text-center">Tampak Produk Tengah</p>
                    <img src="/public/news_images/<%=data[i].gambar_tengah%>" width="180" height="150" />
                  </div>

                  <div class="col-md-3">
                    <p class="text-center">Tampak Produk Belakang</p>
                    <img src="/public/news_images/<%=data[i].gambar_belakang%>" width="180" height="150" />
                  </div>
                </div>
                

                <div class="form-group">                  
                  <label for="exampleInputFile">Image Upload</label>                  
                  <input type="file" name="image" id="exampleInputFile" />
                  <input type="hidden" class="form-control" name="image_old" id="exampleInputEmail1" value="<%=data[i].gambar_produk%>" />
                  <p class="help-block">Please choose an image!</p>
                </div>
                <!-- <div class="checkbox">
                  <label>
                    <input type="checkbox"> Check me out
                  </label>
                </div> -->
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
            <%
                }
              }
            %>
            
          </div>